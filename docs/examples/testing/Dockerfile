FROM ubuntu:24.04

RUN apt-get update && apt-get install -y --no-install-recommends \
    g++ cmake make ca-certificates git \
    && rm -rf /var/lib/apt/lists/*

COPY . /examples
WORKDIR /examples

RUN mkdir build && cd build && cmake .. && make

ENTRYPOINT ["/examples/entrypoint.sh"]
CMD ["test"]
